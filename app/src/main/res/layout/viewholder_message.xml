<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/message_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingRight="50dp"
        android:paddingLeft="15dp"
        android:gravity="left">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/dwight"/>
    <androidx.emoji.widget.EmojiTextView
            android:id="@+id/message_username"
            android:text="@string/username_sample"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_medium"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/message_image"/>
    <LinearLayout
            android:id="@+id/container_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/message_image">
        <LinearLayout
                android:id="@+id/message_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:minWidth="50dp"
                android:background="@drawable/receiver_message"
                android:elevation="2dp">

            <androidx.emoji.widget.EmojiTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/message_body"
                    android:gravity="left"
                    android:textSize="18dp"/>
        </LinearLayout>
        <TextView
                android:id="@+id/message_time"
                android:text="@string/time_sample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="30dp"
                android:padding="5dp"
                android:gravity="left"/>
    </LinearLayout>
</RelativeLayout>