<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.ChatActivity">

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp">
            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/chat_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:backgroundTint="@color/colorChatToolbar"
                    android:theme="@style/ToolbarTheme">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:paddingRight="?android:attr/actionBarSize">

                        <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/chat_profile_image"
                                android:layout_width="76dp"
                                android:layout_height="76dp"
                                android:src="@drawable/white_placeholder"
                                android:padding="10dp"
                                android:transitionName="@string/image_transition"/>

                        <TextView
                                android:id="@+id/chat_toolbar_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_large"
                                android:textColor="@color/colorPrimaryText"
                                android:textStyle="bold"
                                android:paddingBottom="20dp"/>
                    </LinearLayout>

                    <TextView
                            android:id="@+id/chat_flag"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/colorPrimaryText"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/shortcuts">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/whatsappbackground"
                        android:scaleType="centerCrop"
                        android:isScrollContainer="false"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/chat_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/field"
                        android:paddingTop="10dp"/>
                <LinearLayout
                        android:id="@+id/field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="8dp"
                        android:layout_alignParentBottom="true">
                    <androidx.emoji.widget.EmojiEditText
                            android:id="@+id/chat_edittext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:minHeight="40dp"
                            android:inputType="textMultiLine|textShortMessage|textCapSentences"
                            android:hint="@string/chat_hint"
                            android:gravity="center_vertical"
                            android:ems="10"
                            android:background="@drawable/roundcorner"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="20dp"
                            android:layout_weight="16" />
                    <ImageButton
                            android:id="@+id/chat_sendButton"
                            android:layout_width="20dp"
                            android:layout_height="40dp"
                            app:srcCompat="@drawable/send"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:padding="8dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/round_button"/>
                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                    android:id="@+id/shortcuts"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_above="@+id/viewContainer">

                <ImageButton
                        android:id="@+id/emojiButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/emoji"
                        android:scaleType="fitXY"
                        android:padding="@dimen/shorcutPadding"
                        android:layout_marginRight="@dimen/shorcutMargin"
                        android:background="?android:attr/selectableItemBackground"/>

                <ImageButton
                        android:id="@+id/pictureButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/picture"
                        android:scaleType="fitXY"
                        android:padding="@dimen/shorcutPadding"
                        android:layout_marginRight="@dimen/shorcutMargin"
                        android:background="?android:attr/selectableItemBackground"/>

                <ImageButton
                        android:id="@+id/cameraButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/camera"
                        android:scaleType="fitXY"
                        android:padding="@dimen/shorcutPadding"
                        android:layout_marginRight="@dimen/shorcutMargin"
                        android:background="?android:attr/selectableItemBackground"/>

                <ImageButton
                        android:id="@+id/micButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/microphone"
                        android:scaleType="fitXY"
                        android:padding="@dimen/shorcutPadding"
                        android:layout_marginRight="@dimen/shorcutMargin"
                        android:background="?android:attr/selectableItemBackground"/>

                <ImageButton
                        android:id="@+id/locationButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/location"
                        android:scaleType="fitXY"
                        android:padding="@dimen/shorcutPadding"
                        android:layout_marginRight="@dimen/shorcutMargin"
                        android:background="?android:attr/selectableItemBackground"/>
                <ImageButton
                        android:id="@+id/attachmentButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/attachment"
                        android:scaleType="fitXY"
                        android:padding="@dimen/shorcutPadding"
                        android:layout_marginRight="@dimen/shorcutMargin"
                        android:background="?android:attr/selectableItemBackground"/>
                <ImageButton
                        android:id="@+id/codeButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/code"
                        android:scaleType="fitXY"
                        android:padding="@dimen/shorcutPadding"
                        android:layout_marginRight="@dimen/shorcutMargin"
                        android:background="?android:attr/selectableItemBackground"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/viewContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_alignParentBottom="true">

                <FrameLayout
                        android:id="@+id/emoji_container"
                        android:layout_width="match_parent"
                        android:layout_height="295dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="gone">

                </FrameLayout>
                <com.google.android.material.bottomnavigation.BottomNavigationView
                        android:id="@+id/emoji_navbar"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:foregroundGravity="center"
                        app:menu="@menu/emoji_gif_menu"
                        app:labelVisibilityMode="unlabeled"
                        app:layout_constraintTop_toBottomOf="@id/emoji_container"
                        android:visibility="gone"
                        android:elevation="16dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
</LinearLayout>