<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/location_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingVertical="10dp"
        android:paddingLeft="15dp">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/location_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/dwight"/>
    <androidx.emoji.widget.EmojiTextView
            android:id="@+id/location_username"
            android:text="@string/username_sample"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_medium"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/location_image"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/location_image"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">
        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp">
            <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <com.google.android.gms.maps.MapView
                        xmlns:map="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/mapview_location_viewholder"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        map:cameraTargetLat="38.828309999999995"
                        map:cameraTargetLng="0.1162554"
                        map:liteMode="true"
                        map:cameraBearing="112.5"
                        map:cameraTilt="30"
                        map:cameraZoom="13"
                        map:mapType="normal"
                        map:uiCompass="false"
                        map:uiRotateGestures="true"
                        map:uiScrollGestures="false"
                        map:uiTiltGestures="true"
                        map:uiZoomControls="false"
                        map:uiZoomGestures="true"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">
                    <TextView
                            android:id="@+id/place_location_viewholder"
                            android:textColor="@color/colorPrimaryText"
                            android:textStyle="bold"
                            android:text="@string/pinned_location_sample"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
                android:id="@+id/time_location_viewholder"
                android:text="@string/time_sample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="right"/>
    </LinearLayout>
</RelativeLayout>