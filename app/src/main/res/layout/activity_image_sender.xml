<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/imageSenderBackground"
        tools:context=".activity.ImageSenderActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/image_sender_toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="4dp"
            android:layout_weight="1"
            app:theme="@style/ToolbarTheme">
        <androidx.emoji.widget.EmojiTextView
                android:id="@+id/image_sender_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:paddingTop="12dp"
                android:gravity="left"/>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">

        <ImageView
                android:id="@+id/image_sender_media"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/white_placeholder"
                android:layout_gravity="center"/>

        <ProgressBar
                android:id="@+id/media_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyle"
                android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:orientation="horizontal">

        <androidx.emoji.widget.EmojiEditText
                android:id="@+id/image_sender_caption"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="textMultiLine|textShortMessage"
                android:hint="@string/caption_hint"
                android:ems="10"
                android:background="@drawable/roundcorner"
                android:paddingLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="8"/>
        <ImageButton
                android:id="@+id/image_sender_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/send"
                android:background="@drawable/round_button"
                android:scaleType="centerCrop"
                android:padding="10dp"
                android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>