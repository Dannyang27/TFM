<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/imagedisplay_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ImageToolActivity"
        android:background="@color/colorBackground">


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/imagedisplay_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:titleTextColor="@color/colorWhite"
            app:theme="@style/ImageDisplayToolbar"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagedisplay_toolbar"
            android:layout_marginBottom="50dp">

        <ImageView
                android:id="@+id/imagedisplay_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/white_placeholder"
                android:layout_centerVertical="true"
                android:layout_gravity="center" />

        <ProgressBar
                android:id="@+id/imagedisplay_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyle"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

        <RelativeLayout
                android:id="@+id/imagedisplay_labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingHorizontal="10dp">

            <ImageButton
                    android:id="@+id/imagedisplay_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/download"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:background="@null"/>

            <LinearLayout
                    android:id="@+id/layoutOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true">
                <TextView
                        android:id="@+id/labelOne"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/confidenceOne"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/layoutTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/layoutOne">
                <TextView
                        android:id="@+id/labelTwo"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/confidenceTwo"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/layoutThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/layoutTwo">
                <TextView
                        android:id="@+id/labelThree"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/confidenceThree"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>